@using Arc.UX.Configuration

@inject IIconStyleProvider IconStyleProvider
@inject IComponentStyleProvider ComponentStyleProvider

@if (string.IsNullOrEmpty(IconName) == false)
{
    <i class="@ComponentStyleProvider.Text(Style) @IconStyleProvider.Icon(IconName, IconDesign, IconAnimation)" title=@Title></i>
}

@code {
    [Parameter]
    public string? IconName { get; set; }
    [Parameter]
    public string? Title { get; set; }
    [Parameter]
    public string? CssClass { get; set; }
    [Parameter]
    public bool Solid { get; set; } = true;

    [Parameter]
    public string? IconDesign { get; set; }
    // public FontAwesomeDesign Design { get; set; } = FontAwesomeDesign.Solid;

    [Parameter]
    public string? IconAnimation { get; set; }
    // public FontAwesomeAnimation? Animation { get; set; }



    [Parameter]
    public ElementStyle Style { get; set; } = ElementStyle.Primary;

   
}